gem 'activerecord'

gem 'rake', '~>10.3.2'
gem 'jasmine'
gem 'shotgun'
gem "sinatra-cross_origin", "~> 0.3.1"
gem 'httparty'

group :test do
  gem 'shoulda-matchers'
  gem 'rack-test'
  gem 'rspec'
  gem 'capybara'
end

group :test, :development do
  gem 'factory_girl'
  gem 'faker'
end
